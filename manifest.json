{
  "manifest_version": 3,
  "name": "Cricket Live Scores & Subscriptions",
  "version": "1.0",
  "description": "Subscribe to cricket matches and get live scores",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "https://cricbuzz-cricket.p.rapidapi.com/*",
    "https://*.google.com/*",
    "https://*.openai.com/*",
    "https://generativelanguage.googleapis.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Cricket Live Scores"
  },
  "icons": {
    "16": "icons/icon.svg",
    "48": "icons/icon.svg",
    "128": "icons/icon.svg"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
